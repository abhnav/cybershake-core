#!/bin/bash
#SBATCH --job-name="awpgpu"
#SBATCH --output="awpgpu.%j.%N.out"
#SBATCH --partition=gpu
#SBATCH --nodes=1
#SBATCH --gpus=4
#SBATCH --mem=377393M
